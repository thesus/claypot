:80 {
    prometheus {
        use_caddy_addr
    }

    root /var/www/html
    proxy /accounts/ claypot:80 {
        header_upstream Host {host}
    }
    proxy /admin/ claypot:80 {
        header_upstream Host {host}
    }
    proxy /api/ claypot:80 {
        header_upstream Host {host}
    }
}

:80/media/ {
    prometheus {
        use_caddy_addr
    }
    root /srv/media
}
